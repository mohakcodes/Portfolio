---
const { title, imageSrc, description, year, tags, link } = Astro.props;
---

<div class="max-w-sm rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-100">
  <img src={imageSrc} alt={title} class="w-full h-48 object-cover" loading="lazy" />
  <div class="px-6 py-4 bg-slate-100">
    <h2 class="font-bold text-xl mb-2 text-gray-800">{title}</h2>
    <span class="text-sm text-gray-600">{year}</span>
    <p class="text-gray-700 text-base mt-2">{description}</p>
    <div class="flex flex-wrap mt-2">
      {
        tags.map((tag) => (
          <span class="bg-blue-800 text-gray-100 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded">
            {tag}
          </span>
        ))
      }
    </div>
    {link && (
      <a href={link} target="_blank" rel="noopener noreferrer" class="mt-4 inline-block text-blue-600 font-semibold hover:underline">
        View Project
      </a>
    )}
  </div>
</div>