---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
    <div class="flex flex-col justify-center items-center min-h-screen bg-gradient-to-r from-slate-300 via-slate-200 to-slate-300 p-8">
        <div class="container text-center sm:mt-10 animate-fade-in">
            <div class="italic">
                <h1 class="inline-block px-2 text-4xl sm:text-5xl pt-2 font-bold text-transparent bg-clip-text bg-gradient-to-r from-orange-600 via-yellow-500 to-orange-600">Let's Connect</h1> 
                <p class="mt-2 text-xl sm:text-2xl font-semibold text-gray-900">
                    Feel free to reach out for collaborations, job opportunities or just to say hello!
                </p>
            </div>
            <div class="mt-4 flex flex-col sm:flex-row items-center justify-center space-x-0 space-y-2 sm:space-y-0 sm:space-x-4 font-medium">
                <a href="https://github.com/mohakcodes" target="_blank" class="bg-gradient-to-r from-red-600 hover:from-red-700 via-red-800 hover:via-red-700 to-red-900 hover:to-red-800 text-white px-6 sm:py-3 py-1 w-48 sm:w-40 rounded-full text-lg transition duration-300 text-center">
                    Github
                </a>
                <a href="https://www.linkedin.com/in/mohak-chauhan/" target="_blank" class="bg-gradient-to-r from-cyan-500 hover:from-cyan-400 to-cyan-900 hover:to-cyan-800 text-white px-6 sm:py-3 py-1 w-48 sm:w-40 rounded-full text-lg transition duration-300 text-center">
                    LinkedIn
                </a>
                <a href="https://drive.google.com/file/d/1gdnhtbZINcdtjqVGe3PWzfcREO9EU17j/view" target="_blank" class="bg-gradient-to-r from-purple-600 hover:from-purple-700 to-purple-950 hover:to-purple-900 text-white px-6 sm:py-3 py-1 w-48 sm:w-40 rounded-full text-lg transition duration-300 text-center">
                    Resume
                </a>
            </div>
        </div>
    </div>
</BaseLayout>

<style>
	@keyframes fade-in {
	  from {
		opacity: 0;
	  }
	  to {
		opacity: 1;
	  }
	}
  
	.animate-fade-in {
	  animation: fade-in 650ms ease-in-out;
	}
</style>